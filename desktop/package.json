{
  "name": "desktop-helper",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "description": "Task Manager Desktop Helper (tray + floating widget)",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder -w"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "firebase": "^10.12.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.taskmanager.desktophelper",
    "productName": "TaskManagerDesktop",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      { "provider": "github" }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icons"
    },
    "protocols": [
      {
        "name": "TaskApp Protocol",
        "schemes": ["taskapp"]
      }
    ]
  }
}

