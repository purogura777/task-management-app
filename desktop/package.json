{
  "name": "desktop-helper",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "description": "Task Manager Desktop Helper (tray + floating widget)",
  "author": "purogura777",
  "repository": {
    "type": "git",
    "url": "https://github.com/purogura777/task-management-app.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "firebase": "^10.12.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.taskmanager.desktophelper",
    "productName": "TaskManagerDesktop",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      { "provider": "github", "owner": "purogura777", "repo": "task-management-app" }
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "protocols": [
      {
        "name": "TaskApp Protocol",
        "schemes": ["taskapp"]
      }
    ]
  }
}

