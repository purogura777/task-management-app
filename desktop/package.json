{
  "name": "desktop-helper",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "description": "Task Manager Desktop Helper (tray + floating widget)",
  "author": "purogura777",
  "repository": {
    "type": "git",
    "url": "https://github.com/purogura777/task-management-app.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "npm run prepare:icons && electron-builder",
    "dist": "npm run prepare:icons && electron-builder",
    "prepare:icons": "node scripts/prepare-icons.js"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "firebase": "^10.12.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "icojs": "^0.16.1",
    "png2icons": "^2.0.1"
  },
  "build": {
    "appId": "com.taskmanager.desktophelper",
    "productName": "TaskManagerDesktop",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      { "from": "build/icon.png", "to": "icon.png" },
      { "from": "build/icon.icns", "to": "icon.icns" },
      { "from": "../ChatGPT-Image-2025年8月19日-19_55_16.ico", "to": "icon.ico" }
    ],
    "publish": [
      { "provider": "github", "owner": "purogura777", "repo": "task-management-app" }
    ],
    "nsis": {
      "include": "build/installer.nsh"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "../ChatGPT-Image-2025年8月19日-19_55_16.ico",
      "artifactName": "TaskManagerDesktop.Setup.${version}.${ext}"
    },
    "portable": {
      "artifactName": "TaskManagerDesktop.Portable.${version}.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "artifactName": "TaskManagerDesktop-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage"]
    },
    "protocols": [
      {
        "name": "TaskApp Protocol",
        "schemes": ["taskapp"]
      }
    ]
  }
}

